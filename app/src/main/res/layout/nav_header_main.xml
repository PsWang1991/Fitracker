<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/layout">
    <data>
        <variable
                name="viewModel"
                type="com.pinhsiang.fitracker.MainViewModel"
        />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorText"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
                android:id="@+id/user_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                tools:background="@drawable/ic_avatar_36dp_3"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                app:circularAvatar="@{viewModel.userAvatarUrl}"
        />

        <TextView
                android:id="@+id/user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Pneumonoultramicroscopicsilicovolcanoconiosis"
                android:text="@{viewModel.userName}"
                android:textSize="20sp"
                android:textColor="@color/colorBackground"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintStart_toEndOf="@+id/user_avatar" android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/user_avatar"
                android:maxLines="2"
                app:layout_constraintBottom_toBottomOf="@+id/user_avatar"/>

        <TextView
                android:id="@+id/user_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Pneumonoultramicroscopicsilicovolcanoconiosisf@gmail.com"
                android:text="@{viewModel.userEmail}"
                android:textSize="16sp"
                android:textColor="@color/colorItem"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:maxLines="2"
                android:ellipsize="none"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_avatar" android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


