<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
                name="viewModel"
                type="com.pinhsiang.fitracker.inbody.record.InbodyRecordViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_date_inbody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent">
        <ImageView
                android:layout_width="18dp"
                android:layout_height="0dp"
                app:srcCompat="@drawable/ic_calendar_64dp"
                android:id="@+id/image_date_inbody"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_date_inbody"
                app:layout_constraintBottom_toBottomOf="@+id/text_date_inbody"
                app:layout_constraintEnd_toStartOf="@+id/text_date_inbody"
                android:layout_marginEnd="8dp" app:layout_constraintDimensionRatio="h,1:1"/>
        <TextView
                android:id="@+id/text_date_inbody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="2019-09-04"
                android:textColor="@color/colorText" android:textSize="18sp"
                android:text="@{viewModel.selectedDate}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_body_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/view_item_background" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_date_inbody">

            <TextView
                    android:text="@string/body_weight_kg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_body_weight"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/colorText"
                    android:textSize="18sp"/>
            <EditText
                    android:id="@+id/text_body_weight"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/title_body_weight"
                    app:layout_constraintEnd_toEndOf="@+id/title_body_weight"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/title_body_weight"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:text="54"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    android:inputType="numberDecimal"
                    android:text="@={viewModel.bodyWeightRecord}"
                    android:textColor="@color/colorText"
                    android:background="@drawable/bg_edit_text_1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_body_fat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/layout_body_weight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp" android:background="@drawable/view_item_background">

            <TextView
                    android:text="@string/body_fat_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_body_fat"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/colorText"
                    android:textSize="18sp"/>
            <EditText
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" android:id="@+id/text_body_fat"
                    app:layout_constraintStart_toStartOf="@+id/title_body_fat"
                    app:layout_constraintEnd_toEndOf="@+id/title_body_fat" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/title_body_fat" android:textAlignment="center"
                    android:textSize="18sp" tools:text="11.9" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp" android:inputType="numberDecimal"
                    android:text="@={viewModel.bodyFatRecord}"
                    android:textColor="@color/colorText" android:background="@drawable/bg_edit_text_1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_skeletal_muscle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_body_fat"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/view_item_background"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp">

            <TextView
                    android:text="@string/skeletal_muscle_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_skeletal_muscle"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/colorText"
                    android:textSize="18sp"/>
            <EditText
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" android:id="@+id/text_skeletal_muscle"
                    app:layout_constraintStart_toStartOf="@+id/title_skeletal_muscle"
                    app:layout_constraintEnd_toEndOf="@+id/title_skeletal_muscle" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/title_skeletal_muscle" android:textAlignment="center"
                    android:textSize="18sp" tools:text="32.8" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp" android:inputType="numberDecimal"
                    android:text="@={viewModel.skeletalMuscleRecord}"
                    android:textColor="@color/colorText"
                    android:background="@drawable/bg_edit_text_1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_btn_save_data_inbody"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_text_border_inverse"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_skeletal_muscle"
                android:onClick="@{() -> viewModel.saveData()}">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btn_save_data_inbody_inner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp">
                <ImageView
                        android:layout_width="18dp"
                        android:layout_height="0dp" app:srcCompat="@drawable/ic_save_64dp"
                        android:id="@+id/image_stop_timer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/btn_save_data_inbody"
                        app:layout_constraintBottom_toBottomOf="@+id/btn_save_data_inbody"
                        app:layout_constraintEnd_toStartOf="@+id/btn_save_data_inbody"
                        android:layout_marginEnd="8dp" app:layout_constraintDimensionRatio="h,1:1"/>

                <TextView
                        android:text="@string/save"
                        android:id="@+id/btn_save_data_inbody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/colorBackground"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>