<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
                name="viewModel"
                type="com.pinhsiang.fitracker.inbody.InbodyViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/colorWhite">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_calendar_title"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:id="@+id/title_calendar"
                    android:layout_marginStart="16dp" android:layout_marginTop="8dp">

                <TextView
                        android:id="@+id/text_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText"
                        android:textSize="18sp"
                        tools:text="April"
                        app:layout_constraintTop_toTopOf="@+id/text_year"
                        app:layout_constraintStart_toEndOf="@+id/text_year"
                        android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="@+id/text_year"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/text_year" tools:text="2019"
                        android:textSize="18sp"
                        android:textColor="@color/colorText"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/indicator"
                        app:layout_constraintStart_toEndOf="@+id/text_month" android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@+id/text_year"
                        app:layout_constraintBottom_toBottomOf="@+id/text_year"
                        android:background="@{viewModel.calendarExpanding == false ? @drawable/ic_calendar_arrow_down_24dp : @drawable/ic_calendar_arrow_up_24dp}"
                        tools:srcCompat="@drawable/ic_calendar_arrow_up_24dp"
                        android:backgroundTint="@color/colorText"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                    app:layout_constraintTop_toBottomOf="@+id/title_calendar"
                    android:id="@+id/legendLayout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:ignore="HardcodedText"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
            >

                <TextView
                        android:id="@+id/legendText1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SUN"
                        android:textColor="@color/colorText"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/legendText2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="MON"
                        android:textColor="@color/colorText"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/legendText3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="TUE"
                        android:textColor="@color/colorText"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/legendText4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="WED"
                        android:textColor="@color/colorText"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/legendText5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="THU"
                        android:textColor="@color/colorText"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/legendText6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="FRI"
                        android:textColor="@color/colorText"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/legendText7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SAT"
                        android:textColor="@color/colorText"
                        android:textSize="14sp"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.kizitonwose.calendarview.CalendarView
                android:id="@+id/customCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cv_dayViewResource="@layout/calendar_day_layout"
                app:cv_orientation="horizontal"
                app:cv_outDateStyle="endOfRow"
                app:cv_inDateStyle="allMonths"
                app:cv_scrollMode="paged"
                app:layout_constraintTop_toBottomOf="@+id/layout_calendar_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/rv_workout">
        </com.kizitonwose.calendarview.CalendarView>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customCalendar"
                android:id="@+id/layout_inbody_data" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp" android:background="@drawable/view_item_background"
                android:visibility="@{viewModel.displayBodyFat == null ? View.GONE : View.VISIBLE}">

            <TextView
                    android:text="@string/body_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_body_weight"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    android:textSize="18sp" android:textColor="@color/colorText" android:textStyle="bold"/>
            <TextView
                    android:id="@+id/text_body_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/title_body_weight"
                    android:layout_marginStart="16dp"
                    android:textSize="18sp" android:textColor="@color/colorText"
                    app:layout_constraintBottom_toBottomOf="@+id/title_body_weight"
                    app:layout_constraintStart_toEndOf="@+id/title_body_weight" tools:text="53"
                    android:text="@{String.valueOf(viewModel.displayBodyWeight)}" android:textStyle="bold"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/unit_body_weight"
                    app:layout_constraintTop_toTopOf="@+id/title_body_weight"
                    android:layout_marginStart="8dp"
                    android:textSize="18sp" android:textColor="@color/colorText"
                    app:layout_constraintBottom_toBottomOf="@+id/title_body_weight"
                    app:layout_constraintStart_toEndOf="@+id/text_body_weight"
                    app:layout_constraintVertical_bias="0.0" android:text="@string/kg" android:textStyle="bold"/>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="2dp" app:srcCompat="@color/colorItem"
                    android:id="@+id/sep_line" app:layout_constraintTop_toBottomOf="@+id/title_body_weight"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:text="@string/skeletal_muscle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_skeletal_muscle"
                    app:layout_constraintStart_toStartOf="@+id/title_body_weight"
                    android:textSize="18sp" android:textColor="@color/colorText"
                    app:layout_constraintTop_toBottomOf="@+id/sep_line" android:layout_marginTop="8dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_skeletal_muscle"
                    android:textSize="18sp" android:textColor="@color/colorText"
                    app:layout_constraintTop_toTopOf="@+id/title_skeletal_muscle"
                    app:layout_constraintBottom_toBottomOf="@+id/title_skeletal_muscle"
                    app:layout_constraintEnd_toStartOf="@+id/unit_percentage" android:layout_marginEnd="8dp"
                    tools:text="32.1"
                    android:text="@{String.valueOf(viewModel.displaySkeletalMuscle)}"/>
            <TextView
                    android:text="@string/percentage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/unit_percentage"
                    android:textSize="18sp" android:textColor="@color/colorText"
                    app:layout_constraintEnd_toEndOf="@+id/sep_line"
                    app:layout_constraintTop_toTopOf="@+id/title_skeletal_muscle"
                    app:layout_constraintBottom_toBottomOf="@+id/title_skeletal_muscle"/>
            <TextView
                    android:text="@string/body_fat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_body_fat"
                    app:layout_constraintStart_toStartOf="@+id/title_body_weight"
                    android:textSize="18sp" android:textColor="@color/colorText"
                    app:layout_constraintTop_toBottomOf="@+id/title_skeletal_muscle" android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_body_fat"
                    android:textSize="18sp" android:textColor="@color/colorText"
                    app:layout_constraintTop_toTopOf="@+id/title_body_fat"
                    app:layout_constraintBottom_toBottomOf="@+id/title_body_fat" tools:text="12.3"
                    app:layout_constraintEnd_toStartOf="@+id/unit_percentage2" android:layout_marginEnd="8dp"
                    android:text="@{String.valueOf(viewModel.displayBodyFat)}"/>
            <TextView
                    android:text="@string/percentage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/unit_percentage2"
                    android:textSize="18sp" android:textColor="@color/colorText"
                    app:layout_constraintEnd_toEndOf="@+id/sep_line"
                    app:layout_constraintTop_toTopOf="@+id/title_body_fat"
                    app:layout_constraintBottom_toBottomOf="@+id/title_body_fat"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
                android:id="@+id/no_data_inbody"
                android:text="@string/no_data_inbody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customCalendar"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="18sp"
                android:textColor="@color/colorText"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="@{viewModel.displayBodyFat == null ? View.VISIBLE : View.GONE}"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_add_data_inbody"
                app:srcCompat="@drawable/ic_add_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:backgroundTint="@color/colorItem"
                android:onClick="@{() -> viewModel.addNewData()}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>