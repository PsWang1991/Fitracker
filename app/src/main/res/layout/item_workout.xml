<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
                name="workout"
                type="com.pinhsiang.fitracker.data.Workout"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/workout_outter">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@drawable/view_item_background"
                android:id="@+id/workout_inner" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">

            <TextView
                    android:id="@+id/text_motion"
                    android:text="@{workout.motion}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/bench_press"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:textSize="18sp" android:textColor="@color/colorText" android:textStyle="bold"/>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="2dp" app:srcCompat="@color/colorItem"
                    android:id="@+id/sep_line_workout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_motion" android:layout_marginTop="8dp"
            />


            <TextView
                    android:id="@+id/header_workout_record"
                    android:text="@string/number_of_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@+id/layout_header_workout_weight"
                    app:layout_constraintBottom_toBottomOf="@+id/layout_header_workout_weight"
                    app:layout_constraintStart_toStartOf="parent"
            />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_header_workout_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/sep_line_workout"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                        android:id="@+id/img_header_workout_weight"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="@+id/header_workout_weight"
                        app:layout_constraintBottom_toBottomOf="@+id/header_workout_weight"
                        app:layout_constraintEnd_toStartOf="@+id/header_workout_weight"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:background="@drawable/ic_weight_plates_64dp"
                        android:backgroundTint="@color/colorText"
                />
                <TextView
                        android:id="@+id/header_workout_weight"
                        android:text="@string/weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/colorText"
                        android:textSize="18sp"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_header_workout_repeats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/layout_header_workout_weight"
                    app:layout_constraintBottom_toBottomOf="@+id/layout_header_workout_weight"
                    app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                        android:id="@+id/img_header_workout_repeats"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="@+id/header_workout_repeats"
                        app:layout_constraintBottom_toBottomOf="@+id/header_workout_repeats"
                        app:layout_constraintEnd_toStartOf="@+id/header_workout_repeats"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:background="@drawable/ic_repeats_2"
                        android:backgroundTint="@color/colorText"
                />
                <TextView
                        android:id="@+id/header_workout_repeats"
                        android:text="@string/repeats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/colorText"
                        android:textSize="18sp"
                        android:layout_marginEnd="16dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                    android:id="@+id/sep_line_workout2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    app:srcCompat="@color/colorItem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_header_workout_weight"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginTop="8dp"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_workout_sets"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sep_line_workout2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:listitem="@layout/item_workout_record_sets"
                    tools:itemCount="6"
                    app:workoutSets="@{workout.sets}"
                    android:paddingBottom="8dp"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>