<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_fitracker"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="64dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:text="@string/fitracker" android:textSize="38sp"
                android:textColor="@color/colorBlack"/>
        <Button
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_to_main" app:layout_constraintStart_toStartOf="@+id/text_fitracker"
                app:layout_constraintEnd_toEndOf="@+id/text_fitracker" android:layout_marginTop="64dp"
                app:layout_constraintTop_toBottomOf="@+id/text_fitracker"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>