<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
                name="set"
                type="com.pinhsiang.fitracker.data.Sets"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="@color/colorInvisible">

        <TextView
                android:text="@{String.valueOf(set.liftWeight)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_body_weight" tools:text="20"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorText" android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"
                app:layout_constraintStart_toEndOf="@+id/image_weight_plate_workout_sets"/>
        <TextView
                android:text="@string/kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unit_weight"
                app:layout_constraintTop_toTopOf="@+id/text_body_weight"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/text_body_weight"
                app:layout_constraintStart_toEndOf="@+id/text_body_weight" android:textColor="@color/colorText"
                android:textSize="18sp"/>
        <TextView
                android:text="@{String.valueOf(set.repeats)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_rep" tools:text="15"
                app:layout_constraintTop_toTopOf="@+id/text_body_weight"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/unit_rep"
                app:layout_constraintBottom_toBottomOf="@+id/text_body_weight" android:textColor="@color/colorText"
                android:textSize="18sp"/>
        <TextView
                android:text="@string/rep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unit_rep"
                app:layout_constraintTop_toTopOf="@+id/text_body_weight"
                app:layout_constraintBottom_toBottomOf="@+id/text_body_weight"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:textColor="@color/colorText" android:textSize="18sp"/>
        <ImageView
                android:id="@+id/image_repeats_workout_sets"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_repeats_2"
                android:backgroundTint="@color/colorText"
                app:layout_constraintBottom_toBottomOf="@+id/text_body_weight"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toStartOf="@+id/text_rep"
                app:layout_constraintTop_toTopOf="@+id/text_body_weight" app:layout_constraintDimensionRatio="1:1"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp" app:srcCompat="@drawable/ic_weight_plate"
                android:id="@+id/image_weight_plate_workout_sets"
                app:layout_constraintBottom_toBottomOf="@+id/text_body_weight"
                app:layout_constraintTop_toTopOf="@+id/text_body_weight" app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>